<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="row">
      <h2>ユーザー登録</h2>
    </div>
    <div class="row">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      　<%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group col-md-offset-3 col-md-6">
          <label class="controll-label sr-only" for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", id:"inputName", class:"col-md-8 col-md-offset-2 form-controll", placeholder: "名前" %>
        </div>

         <div class="form-group col-md-offset-3 col-md-6">
          <label class="controll-label sr-only" for="inputEmail">Email</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"inputEmail", class:"col-md-8 col-md-offset-2 form-controll", placeholder: "メールアドレス" %>
        </div>

        <div class="form-group col-md-offset-3 col-md-6">
          <label class="controll-label sr-only" for="inputPassword">Password</label>
          <%= f.password_field :password, autocomplete: "off", id:"inputPassword", class:'col-md-8 col-md-offset-2 form-controll', placeholder: "パスワード" %>
        </div>

         <div class="form-group col-md-offset-3 col-md-6">
          <label class="controll-label sr-only" for="inputConfirmPassword">パスワード確認</label>
          <%= f.password_field :password_confirmation, autocomplete: "off", id:"inputConfirmPassword", class:'col-md-8 col-md-offset-2 form-controll', placeholder: "パスワード確認" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: 'btn btn-primary col-md-offset-4 col-md-4 btn' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

