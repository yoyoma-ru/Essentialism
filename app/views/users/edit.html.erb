<div class="row space_top">
	<div class="col-xs-offset-1 col-xs-10">
		<div class="row">
			<h1 class="headline_style-1">User Page 編集</h1>
			<div class="bottom_line_style-1"></div>
		</div>
		<%= form_for(@user) do |f| %>
		    <div class="row user_page-content">
		        <div class="col-xs-offset-2 col-xs-3 user_page-text">user icon</div>
		        <div class="col-xs-6" id="profile-image">
		        	<%= attachment_image_tag @user, :profile_image, class: "user_page-icon", fallback: "no_image.jpg" %>
		        </div>
		        <div class="col-xs-offset-1"></div>
		        <div class="col-xs-offset-5 col-xs-6">
		        	<%= f.attachment_field :profile_image, placeholder:"画像" %>
		        </div>
		    </div>
			<div class="row user_page-content">
				<div class="col-xs-offset-2 col-xs-3 user_page-text">name</div>
		    	<div class="col-xs-6">
		    		<%= f.text_field :name, class:"col-xs-12", placeholder:"名前を記入して下さい(1~10文字まで)" %>
		    	</div>
			</div>
			<div class="row user_page-content">
				<div class="col-xs-offset-2 col-xs-3 user_page-text">introduction</div>
		    	<div class="col-xs-6">
		    		<%= f.text_area :introduction, class:"col-xs-12", rows:"10", placeholder:"自己紹介文を記入して下さい(300文字まで）" %></div>
			</div>
			<div class="row user_page-content">
				<%= f.submit "更新する", class:"col-xs-offset-4 col-xs-4 btn btn-primary" %>
			</div>
		<% end %>
	</div>
</div>


