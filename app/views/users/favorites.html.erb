<div class="row space_top">
	<div class="col-xs-offset-3 col-xs-6">
		<h1 class="work-title">Favorites</h1>
	</div>

	<div class="col-xs-offset-1 col-xs-11">
		<% @favorites_works.each do |favorite| %>
			<div class="row user_works-box">
		        <div class="col-xs-12 margin_style2">
		            <%= link_to user_path(favorite.user) do %>
		                <%= attachment_image_tag favorite.user, :profile_image, class: "user-icon", fallback:"no_image.jpg" %>
		            <% end %>
		            <span class="slash-interval"> / </span>
		            <span><%= favorite.user.name %></span>
		        </div>
		        <div class="col-xs-4">本質目標</div>
		        <div class="col-xs-8">
		            <%= simple_format(favorite.writing) %>
		        </div>
		        <%= link_to user_work_path(favorite.user.id)do %>
		            <button class="btn btn-xs btn-default pull-right">もっとみる</button>
		        <% end %>
		    </div>
		    <div class="border_bottom-line"></div>
		<% end %>
	</div>
</div>