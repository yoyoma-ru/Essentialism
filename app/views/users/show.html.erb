<div class="row">
	<div class="col-xs-offset-1 col-xs-10">
		<div class="row">
			<h1 class="headline_style-1">My Page</h1>
			<div class="bottom_line_style-1">
		</div>
		<div class="row my_page-content">
		    <div class="col-xs-offset-2 col-xs-3 my_page-text">user icon</div>
		    <div><%= attachment_image_tag current_user, :profile_image,　class:"col-xs-6 img-circle", size: "200x200", fallback: "no_image.jpg" %></div>
		</div>
		<div class="row my_page-content">
			<div class="col-xs-offset-2 col-xs-3 my_page-text">name</div>
		    <div class="col-xs-6"><%= @user.name %></div>
		</div>
		<div class="row my_page-content">
			<div class="col-xs-offset-2 col-xs-3 my_page-text">introduction</div>
		    <div class="col-xs-6"><%= simple_format(@user.introduction) %></div>
		</div>
		<% if @user.id == current_user.id %>
		    <div class="row">
			    <div>
			    	<%= link_to "編集", edit_user_path(@user), class:"col-xs-offset-2 col-xs-3 btn btn-primary" %>
			    </div>
			    <div>
			    	<%= link_to "退会", user_path(@user), method: :delete, class:"col-xs-offset-2 col-xs-3 btn btn-danger", "data-confirm"=>"本当に退会してよろしいですか？" %>
			    </div>
		    </div>
		<% end %>
	</div>
</div>