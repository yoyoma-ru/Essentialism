<div class="row space_top">
	<div class="col-xs-offset-1 col-xs-11">
	    <h1 class="work-title">ランキング</h1>
	</div>

	<div class="col-xs-offset-1 col-xs-11">
		<% @ranks.each do |rank| %>
			<div class="col-xs-6 user_works-box">
                <div class="col-xs-12 margin_style2">
                	<%= link_to user_path(rank.user) do %>
	                    <%= attachment_image_tag rank.user, :profile_image, class: "user-icon", fallback:"no_image.jpg" %>
	                   <% end %>
                    <span class="slash-interval"> / </span>
                    <span><%= rank.user.name %></span>
                </div>
		        <div class="col-xs-4">本質目標</div>
		        <div class="col-xs-8">
                    <%= simple_format(rank.writing) %>
                </div>
                <%= link_to user_work_path(rank.user.id)do %>
                    <button class="btn btn-xs btn-default pull-right">もっとみる</button>
                <% end %>
                <div class="border_bottom-line"></div>
	        </div>
		<% end %>
    </div>
    <div class="list-page">
		<%= paginate @ranks %>
	</div>
</div>