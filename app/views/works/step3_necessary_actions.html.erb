<div class="row">
	<div class="col-xs-offset-1 col-xs-10">
		<div class="row space">
	        <div class="col-xs-1 step-logo">step3</div>
	        <div class="col-xs-offset-1 col-xs-8">
		        <h1 class="work-title">本質目標を達成するために</h1>
		        <p class="work-explanation">
			    先ほど決めた「本質目標」を達成するために<br>
			    考えられる必要な行動を思いつくだけ書き出すワークです
		        </p>
	        </div>
	    </div>

	    <div class="row space">
	    	<div class="col-xs-3">
				<h4>本質目標</h4>
		    </div>
		    <div class="col-xs-7 essential">
		    	<%= @my_essential_goal.writing %>
		    </div>
		</div>

		<div class="row space">
			<div class="col-xs-3">
				<h4>必要なこと</h4>
		    </div>
		    <div class="col-xs-7">
		    	<div class="row space">
		    		<div class="essential">
		    			<%= form_with model: @necessary_action do |f| %>
		    			    <%= f.text_area :writing, class:"col-xs-12", rows:"2", placeholder: "ここに書き込んで下さい" %>
		    			    <%= f.hidden_field :user_id, :value => current_user.id %>
		    			    <%= f.hidden_field :genre, :value => 9 %>
		    			    <%= f.submit "作成", class:"pull-right" %>
		    			<% end %>
		    		<br>
		    		<br>
		    		</div>
		    	</div>
		    	<% @necessary_actions.each do |necessary_action| %>
		    	    <div class="row essential">
		    	    	<%= necessary_action.writing %>
		    	    	<br>
		    	    </div>
		    	<% end %>
		    </div>
		</div>

		<div class="row space">
			<%= link_to "戻る", 'javascript:history.back()', class:"col-xs-offset-1 col-xs-2 btn btn-default" %>
			<%= link_to "My Work一覧", works_path, class:"col-xs-offset-2 col-xs-2 btn btn-default" %>
			<%= link_to "次へ", works_7_path, class:"col-xs-offset-2 col-xs-2 btn btn-default" %>
		</div>
	</div>
</div>