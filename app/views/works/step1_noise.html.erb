<div class="row">
	<div class="col-xs-offset-1 col-xs-10">
		<div class="row">
	        <div class="col-xs-1 step-logo">step1</div>
	        <div class="col-xs-offset-2 col-xs-6">
		        <h1 class="work-title">「ノイズ」について振り返る</h1>
		        <p class="work-explanation">
			    ノイズについて日々の生活や今まで、どの程度出来ていたか<br>
			    エッセンシャル思考と非エッセンシャル思考に分けて把握する。
		        </p>
	        </div>
	    </div>

		<div class="row space">
			<div class="col-xs-5">
				<h3 class="non_essential">非エッセンシャル思考</h3>
				<p>
					大多数のものごとが大切だと思い込む<br>
					「全部やらなくては」という思考から抜け出せないなど
				</p>
			</div>
			<div class="col-xs-2">
				<h3 class="step-headline">選択</h3>
			</div>
			<div class="col-xs-5">
				<h3 class="essential">エッセンシャル思考</h3>
				<p>
					大多数のものごとが不要だと考える<br>
					多くのことをやらなくて済むように、多くを吟味するなど
				</p>
			</div>
		</div>

		<div class="row space">
			<div class="col-xs-5">
				<div class="row">
					<div class="non_essential">
						<%= form_with model: @writing, url: works_path do |f| %>
						    <div class="form-group">
						    	<%= f.label :wrting, "「ノイズ」に関する非エッセンシャル思考" %>
						    	<%= f.text_area :writing, class:"col-xs-12 text-black", rows:"4", placeholder: "ご自身の経験を書き込みましょう" %>
						    </div>
						    <%= f.hidden_field :user_id, :value => current_user.id %>
						    <%= f.hidden_field :genre, :value => 2 %>
						    <br>
						    <br>
						    <br>
						    <br>
						    <%= f.submit "作成", class:"text-black pull-right" %>
						<% end %>
					</div>
					<br>
					<% @non_essential_writing.each do |non_essential| %>
			        	<div class="non_essential">
			        		<div><%= non_essential.writing %></div>
			        		<%= link_to "削除", work_path(non_essential), method: :delete, class:"btn btn-danger btn-sm pull-right" %>
			        	</div>
			        	<br>
			        <% end %>
			    </div>
			</div>
			<div class="col-xs-offset-2 col-xs-5">
				<div class="row">
					<div class="essential">
						<%= form_with model: @writing, url: works_path do |f| %>
						    <div class="form-group">
						    	<%= f.label :wrting, "「ノイズ」に関するエッセンシャル思考" %>
						    	<%= f.text_area :writing, class:"col-xs-12", rows:"4", placeholder: "ご自身の経験を書き込みましょう" %>
						    </div>
						    <%= f.hidden_field :user_id, :value => current_user.id %>
						    <%= f.hidden_field :genre, :value => 3 %>
						    <br>
						    <br>
						    <br>
						    <br>
						    <%= f.submit "作成", class:"pull-right" %>
						<% end %>
					</div>
					<br>
			        <% @essential_writing.each do |essential| %>
			        	<div class="essential">
			        		<div><%= essential.writing %></div>
			        		<%= link_to "削除", work_path(essential), method: :delete, class:"btn btn-danger btn-sm pull-right" %>
			        	</div>
			        	<br>
			        <% end %>
			    </div>
			</div>
		</div>

		<div class="row space">
			<div class="col-xs-offset-1 col-xs-2 btn btn-default">戻る</div>
			<%= link_to "My Work一覧", works_path, class:"col-xs-offset-2 col-xs-2 btn btn-default" %>
			<%= link_to "次へ", works_3_path, class:"col-xs-offset-2 col-xs-2 btn btn-default" %>
		</div>
	</div>
</div>