        		        <div class="col-xs-3">本質目標</div>
        		        <div class="col-xs-9"><%= goal.writing %></div>
        		        <div class="col-xs-3"><%= goal.user_id.image %></div>
        		        <div class="col-xs-6"><%= goal.user_id.name %></div>
        	        </div>
                <% end %>
        	    <div class="row">
        		    <div class="col-xs-offset-5 col-xs-2 btn btn-default">もっと見る</div>
        	    </div>
            </div>
            <div class="col-xs-offset-2 col-xs-5">
        	    <h3>良いね数ランキング</h3>
        	    <div class="row essential">
        		    <div class="col-xs-3">本質目標</div>
        		    <div class="col-xs-9">内容</div>
        		    <div class="col-xs-3">aicon</div>
        		    <div class="col-xs-6">nikname</div>
        	    </div>
        	    <div class="row space">
        		    <div class="col-xs-offset-5 col-xs-2 btn btn-default">もっと見る</div>
        	    </div>
            </div>
        </div>
    </div>
